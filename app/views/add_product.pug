extends layout
block content
  div.container
    div.row
      div.col-xs-12
        h1 New product
        form(action = '/add', method = 'POST', enctype = 'multipart/form-data')
          div.form-group
            label.control-label NAME
            input.form-control(type = 'text', name = 'name', required)
          div.form-group
            label.control-label TAG LINE
            input.form-control(type = 'text', name = 'tagline')
          div.form-group
            label.control-label URL
            input.form-control(type = 'text', name = 'url', required)
          div.form-group
            label.control-label PICTURE
            input(type = 'file', name = 'photo')
          ul.list-inline
            li
              button.btn.btn-danger(type = 'submit') ADD
            li
              a.btn.btn-warning(href = '/products') CANCEL
